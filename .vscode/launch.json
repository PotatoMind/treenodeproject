{
    "version": "0.1.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}/index.html"
        },
        {
            "name": "Launch localhost",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8080",
            "file": "${workspaceRoot}/index.html"
        },
        {
            "name": "Attach to Chrome",
            "request": "attach",
            "type": "chrome",
            "port": 80,
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}"
        }
    ]
}
